<launch>
    <rosparam file="$(find march_hardware_interface)/config/testsetup/hardware.yaml" command="load"/>
    <rosparam file="$(find march_hardware_interface)/config/testsetup/controllers.yaml" command="load"/>
    <rosparam file="$(find march_hardware_interface)/config/testsetup/joint_limits.yaml" command="load"/>

    <!-- Load the URDF into the ROS Parameter Server -->
    <param name="robot_description"
           command="$(find xacro)/xacro --inorder '$(find march_description)/urdf/test-joint.xacro'" />

    <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="true" output="screen" ns="/"
          args="
                /march/controller/state
                /march/controller/temperature_sensor
                /march/controller/trajectory/testjoint
            "/>

    <node name="march_hardware_interface" pkg="march_hardware_interface" type="march_hardware_interface_node" args="testsetup" output="screen"/>

</launch>
